# Mory Configuration Example
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
MORY_OPENAI_API_KEY=sk-your-openai-api-key-here
MORY_EMBEDDING_MODEL=text-embedding-3-small
MORY_SEMANTIC_ENABLED=true
MORY_HYBRID_WEIGHT=0.7
MORY_SIMILARITY_THRESHOLD=0.3
MORY_MAX_BATCH_SIZE=100
MORY_CACHE_ENABLED=true

# General Application Settings
MORY_DATA_PATH=data/memories.json
MORY_SERVER_PORT=8080
MORY_LOG_LEVEL=info

# Obsidian Integration (Optional)
# Uncomment and set the path to your Obsidian vault
# MORY_OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Data Directory Override (Optional)
# Uncomment to use a custom data directory
# MORY_DATA_DIR=/custom/data/directory