# Mory Server Configuration Example
# Copy this file to .env and modify as needed

# Server Settings
MORY_HOST=0.0.0.0
MORY_PORT=8080
MORY_DEBUG=true

# Data Storage
MORY_DATA_DIR=data
# MORY_DATABASE_URL=sqlite:///data/memories.db  # Optional: full database URL

# OpenAI Semantic Search (optional)
# OPENAI_API_KEY=your_openai_api_key_here
MORY_SEMANTIC_SEARCH_ENABLED=true
MORY_OPENAI_MODEL=text-embedding-3-large
MORY_HYBRID_SEARCH_WEIGHT=0.7

# Obsidian Integration (optional)
# MORY_OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault